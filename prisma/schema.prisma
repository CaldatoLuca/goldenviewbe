generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Spot {
  id          String   @id @default(cuid())
  name        String
  userId      String?
  images      String[]
  latitude    Float?
  longitude   Float?
  address     String?
  place       String?
  description String?
  public      Boolean  @default(true)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  slug        String   @unique
  User        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  username      String?
  email         String?   @unique
  password      String?
  image         String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified DateTime?
  Spot          Spot[]
}

enum Role {
  USER
  ADMIN
}
